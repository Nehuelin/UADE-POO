public class Main {
    public static void main(String[] args) {
        Juego juego = new Juego(5);
        juego.showRemainingLives();

        juego.lives--;
        juego.showRemainingLives();

        Juego juego2 = new Juego(5);
        juego2.showRemainingLives();
        juego.showRemainingLives();
    }
}
